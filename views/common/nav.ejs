    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            // Toggle Faculty Dropdown on click
            $('#facultyBtn').click(function(){
                $('#facultyDropdown').toggle(); // Toggle the dropdown menu
            });

            // Toggle Student Dropdown on click
            $('#studentBtn').click(function(){
                $('#studentDropdown').toggle(); // Toggle the dropdown menu
            });

            // Hide Faculty Dropdown on mouse leave
            $('#facultyDropdown').mouseleave(function(){
                $('#facultyDropdown').hide(); // Hide the dropdown menu
            });

            // Hide Student Dropdown on mouse leave
            $('#studentDropdown').mouseleave(function(){
                $('#studentDropdown').hide(); // Hide the dropdown menu
            });

            // Optional: Hide dropdowns when clicking outside of them
            $(document).click(function(event) {
                if (!$(event.target).closest('#facultyBtn, #facultyDropdown').length) {
                    $('#facultyDropdown').hide();
                }
                if (!$(event.target).closest('#studentBtn, #studentDropdown').length) {
                    $('#studentDropdown').hide();
                }
            });
        });
    </script>

